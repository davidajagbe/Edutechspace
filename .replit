modules = ["nodejs-20", "web", "bash"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd Edutechspace && npm run preview -- --host 0.0.0.0"]
build = ["sh", "-c", "cd Edutechspace && npm run build"]

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Run Dev Server"
author = 18292213
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Edutechspace && npm run dev"

[[workflows.workflow]]
name = "Dev Server"
author = 18292213
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Edutechspace && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Edutechspace/server && node src/index.js"

[[ports]]
localPort = 5173
externalPort = 80
